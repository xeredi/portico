<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="errorLog" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File"
			value="/home/xeredi/proyectos/deploy/log/integra_error.log" />
		<param name="DatePattern" value=".yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p %d [%l]%n\t%m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="WARN" />
		</filter>
	</appender>

	<appender name="infoLog" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/home/xeredi/proyectos/deploy/log/integra_info.log" />
