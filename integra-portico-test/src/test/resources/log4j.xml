			<param name="ConversionPattern" value="%-5p %d [%l]%n\t%m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO" />
		</filter>
	</appender>

	<appender name="debugLog" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File"
			value="/home/xeredi/proyectos/deploy/log/integra_debug.log" />
		<param name="DatePattern" value=".yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p %d [%l]%n\t%m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="DEBUG" />
		</filter>
	</appender>

	<appender name="serverLog" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File"
			value="/home/xeredi/proyectos/deploy/log/integra_server.log" />
		<param name="DatePattern" value=".yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p %d [%l]%n\t%m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="DEBUG" />
		</filter>
	</appender>

	<appender name="dbLog" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/home/xeredi/proyectos/deploy/log/integra_db.log" />
		<param name="DatePattern" value=".yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p %d [%l]%n\t%m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="DEBUG" />
		</filter>
	</appender>

	<!-- <logger name='xeredi.integra.model.dao'>
		<level value="DEBUG" />
		<appender-ref ref="dbLog" />
	</logger>-->
	<logger name='xeredi'>
		<level value="DEBUG" />

		<appender-ref ref="debugLog" />
