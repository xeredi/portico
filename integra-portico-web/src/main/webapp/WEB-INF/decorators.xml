<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
    <excludes>
        <pattern>*/struts/*</pattern>
        <pattern>*.js</pattern>
        <pattern>*.css</pattern>
        <!--
        <pattern>*.html</pattern>
          -->
    </excludes>

    <decorator name="popup-theme" page="/WEB-INF/content/layout/popup-layout.jsp">
        <pattern>/*popup*</pattern>
        <pattern>/*lupa*</pattern>
        <pattern>/*grid*</pattern>
    </decorator>
    <decorator name="basic-theme" page="/WEB-INF/content/layout/default-layout.jsp">
        <pattern>/*</pattern>
    </decorator>
</decorators>
