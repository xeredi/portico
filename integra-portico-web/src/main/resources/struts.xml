<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="struts.devMode" value="false" />
	<constant name="struts.i18n.reload" value="false" />
	<constant name="struts.configuration.xml.reload" value="false" />

	<package name="default" extends="json-default">
		<interceptors>
			<interceptor name="app" class="xeredi.integra.http.util.interceptor.AppInterceptor" />
			<interceptor-stack name="porticoStack">
				<interceptor-ref name="timer" />
				<interceptor-ref name="app" />
				<interceptor-ref name="json">
					<param name="excludeNullProperties">true</param>
					<param name="ignoreHierarchy">false</param>
					<param name="enableGZIP">false</param>
				</interceptor-ref>
				<interceptor-ref name="basicStack" />
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="porticoStack" />
	</package>
</struts>