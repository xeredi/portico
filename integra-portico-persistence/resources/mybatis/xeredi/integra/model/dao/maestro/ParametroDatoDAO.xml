<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
SELECT *
    , (
        SELECT prmt_parametro
        FROM tbl_parametro_prmt
        WHERE prmt_pk = prdt_prmt_pk
    ) AS prmt_parametro
    , (
        SELECT p18n_texto
        FROM tbl_parametro_i18n_p18n
        WHERE p18n_prvr_pk = prdt_prmt_prvr_pk
            AND p18n_idioma = 'es_ES'
    )
FROM (
    select prdt.*
        , (
            SELECT prvr_pk
            FROM tbl_parametro_version_prvr
            WHERE prvr_prmt_pk = prdt_prmt_pk
                AND getSysDatetime() BETWEEN prvr_fini AND COALESCE(prvr_ffin, getSysDatetime())
        ) AS prdt_prmt_prvr_pk
    FROM tbl_parametro_prmt prmt
        JOIN tbl_parametro_version_prvr prvr on
            prvr_prmt_pk = prmt_pk
            AND getSysDatetime() BETWEEN prvr_fini AND COALESCE(prvr_ffin, getSysDatetime())
            AND prmt_tppr_pk = 20049
        join tbl_parametro_dato_prdt prdt ON
            prdt_prvr_pk = prvr_pk
    LIMIT 100
) sql
;

 -->
<mapper namespace="xeredi.integra.model.dao.maestro.ParametroDatoDAO">
    <resultMap type="ItemDatoVO" id="ResultMap">
        <id column="prdt_prvr_pk" property="itemId" />
        <id column="prdt_tpdt_pk" property="tpdtId" />
        <result column="prdt_nentero" property="cantidadEntera" />
        <result column="prdt_ndecimal" property="cantidadDecimal" />
        <result column="prdt_fecha" property="fecha" />
        <result column="prdt_cadena" property="cadena" />

        <association property="prmt" javaType="ParametroVO">
            <result column="prdt_prmt_pk" property="id" />
            <result column="prmt_parametro" property="parametro" />

            <association property="i18n" javaType="ParametroI18nVO">
                <result column="p18n_texto" property="texto" />
            </association>
        </association>
    </resultMap>

    <sql id="SelectPrefix">
        <![CDATA[
        SELECT *
        ]]>
        <if test="idioma != null">
        <![CDATA[
            , (
                    CASE
                        WHEN tppr_es_i18n = 1
                        THEN (
                            SELECT p18n_texto
                            FROM tbl_parametro_i18n_p18n
                            WHERE p18n_prvr_pk = prvr_pk AND p18n_idioma = 'es_ES'
                        )

                        WHEN tppr_tpdt_pk IS NOT NULL
                        THEN (
                            SELECT prdt_cadena
                            FROM tbl_parametro_dato_prdt
                            WHERE prdt_prvr_pk = prvr_pk AND prdt_tpdt_pk = tppr_tpdt_pk
                        )

                        END
            ) AS p18n_texto
        ]]>
        </if>
        <![CDATA[
        FROM (
        	SELECT prdt_prvr_pk, prdt_tpdt_pk, prdt_nentero, prdt_ndecimal, prdt_fecha, prdt_prmt_pk, prdt_cadena
        		, prmt_parametro
        		, tppr_es_i18n, tppr_tpdt_pk
        ]]>
        <if test="idioma != null and fechaVigencia != null">
        <![CDATA[
        		, (
        			SELECT prvr_pk
        			FROM tbl_parametro_version_prvr
        			WHERE prvr_prmt_pk = prdt_prmt_pk
        				AND #{fechaVigencia} BETWEEN prvr_fini AND COALESCE(prvr_ffin, #{fechaVigencia})
        		) AS prvr_pk
        ]]>
        </if>
        <![CDATA[
        	FROM
        		tbl_parametro_dato_prdt
        		LEFT JOIN tbl_parametro_prmt ON
        			prmt_pk = prdt_prmt_pk
        		LEFT JOIN tbl_tipo_parametro_tppr ON
        			tppr_pk = prmt_tppr_pk
        	WHERE
        		EXISTS (
        			SELECT 1
        			FROM tbl_parametro_version_prvr
        			WHERE prvr_pk = prdt_prvr_pk
        ]]>
        <if test="fechaVigencia != null">
        <![CDATA[
        				AND getSysDatetime() BETWEEN prvr_fini AND COALESCE(prvr_ffin, getSysDatetime())
        ]]>
        </if>
        <if test="prvrIds != null and !prvrIds.empty">
        <![CDATA[
                        AND prvr_pk IN
        ]]>
            <foreach collection="prvrIds" item="item" open="(" close=")" separator=",">#{item}
            </foreach>
        </if>
        <if test="itdtMap != null and !itdtMap.empty">
            <foreach collection="itdtMap" index="key" item="itdt">
                <!-- FIXME ojo, faltan las fechas -->
                <if
                    test="itdt.prmtId != null or itdt.cantidadDecimal or itdt.cantidadEntera != null or (itdt.cadena != null and !itdt.cadena.empty) or (itdt.cadenas != null and !itdt.cadenas.empty)">
                        <![CDATA[
                        AND EXISTS (
                            SELECT 1
                            FROM tbl_parametro_dato_prdt
                            WHERE
                                    prdt_prvr_pk = prvr_pk
                                    AND prdt_tpdt_pk = #{key}
                        ]]>
                    <if test="itdt.prmtId != null">
                    <![CDATA[
                                    AND prdt_prmt_pk = #{itdt.prmtId}
                    ]]>
                    </if>
                    <if test="itdt.cantidadEntera != null">
                    <![CDATA[
                                    AND prdt_nentero = #{itdt.cantidadEntera}
                    ]]>
                    </if>
                    <if test="itdt.cantidadDecimal != null">
                    <![CDATA[
                                    AND prdt_ndecimal = #{itdt.cantidadDecimal}
                    ]]>
                    </if>
                    <if test="itdt.cadena != null and !itdt.cadena.empty">
                    <![CDATA[
                                    AND prdt_cadena LIKE #{itdt.cadena}
                    ]]>
                    </if>
                    <if test="itdt.cadenas != null and !itdt.cadenas.empty">
                    <![CDATA[
                                    AND prdt_cadena IN
                    ]]>
                        <foreach collection="itdt.cadenas" item="cadena" open="(" close=")"
                            separator=",">#{cadena}
                        </foreach>
                    </if>
                    <![CDATA[
                        )
                    ]]>
                </if>
            </foreach>
        </if>

        <![CDATA[
           				AND EXISTS (
        					SELECT 1
        					FROM tbl_parametro_prmt
        					WHERE prmt_pk = prvr_prmt_pk
        ]]>
        <if test="id != null">
        <![CDATA[
                                AND prmt_pk = #{id}
        ]]>
        </if>

        <if test="ids != null and !ids.empty">
        <![CDATA[
                                AND prmt_pk IN
        ]]>
            <foreach collection="ids" item="item" open="(" close=")" separator=",">#{item}
            </foreach>
        </if>

        <if test="entiId != null">
        <![CDATA[
                                AND prmt_tppr_pk = #{entiId}
        ]]>
        </if>

        <if test="entiIds != null and !entiIds.empty">
        <![CDATA[
                                AND prmt_tppr_pk IN
        ]]>
            <foreach collection="entiIds" item="item" open="(" close=")" separator=",">#{item}
            </foreach>
        </if>
        <![CDATA[
                        )
                )
        ]]>

        <if test="soloDatosGrid">
        <![CDATA[
                AND EXISTS (
                    SELECT 1
                    FROM tbl_entidad_tipo_dato_entd
                    WHERE
                        entd_tpdt_pk = prdt_tpdt_pk
                        AND entd_enti_pk = #{entiId}
                        AND entd_gridable = 1
                )
        ]]>
        </if>

        <![CDATA[
        ) sql
        ]]>
    </sql>

    <select id="selectList" parameterType="ParametroCriterioVO" resultMap="ResultMap">
        <include refid="SelectPrefix" />
    </select>

    <insert id="insert" parameterType="ItemDatoVO">
        <![CDATA[
        INSERT INTO tbl_parametro_dato_prdt (prdt_prvr_pk, prdt_tpdt_pk, prdt_nentero, prdt_ndecimal, prdt_fecha, prdt_prmt_pk, prdt_cadena)
        VALUES (#{itemId}, #{tpdtId}, #{cantidadEntera}, #{cantidadDecimal}, #{fecha}, #{prmt.id}, #{cadena})
        ]]>
    </insert>
</mapper>
