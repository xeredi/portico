<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xeredi.integra.model.dao.metamodelo.EntidadGrupoDatoDAO">
    <resultMap type="EntidadGrupoDatoVO" id="ResultMap">
        <id column="engd_enti_pk" property="entiId" />
        <id column="engd_orden" property="numero" />
        <result column="engd_etiqueta" property="etiqueta" />
    </resultMap>

    <sql id="SelectPrefix">
    <![CDATA[
        SELECT
            engd_enti_pk, engd_orden, engd_etiqueta
        FROM
            tbl_entidad_grupo_dato_engd engd
    ]]>
    </sql>

    <sql id="SelectWhere">
        <where>
            <if test="entiId != null">
                AND engd_enti_pk = #{entiId}
            </if>
            <if test="numero != null">
                AND engd_orden = #{numero}
            </if>
        </where>
    </sql>

    <select id="selectAll" resultMap="ResultMap">
        <include refid="SelectPrefix" />
        ORDER BY engd_enti_pk, engd_orden
    </select>

    <select id="selectList" resultMap="ResultMap" parameterType="EntidadGrupoDatoCriterioVO">
        <include refid="SelectPrefix" />
        <include refid="SelectWhere" />
        ORDER BY engd_enti_pk, engd_orden
    </select>

    <select id="selectCriterio" resultMap="ResultMap" parameterType="EntidadGrupoDatoCriterioVO">
        <include refid="SelectPrefix" />
        <include refid="SelectWhere" />
    </select>

    <select id="selectLabelValues" parameterType="EntidadGrupoDatoCriterioVO" resultType="LabelValueVO">
        <![CDATA[
        SELECT
            engd_orden AS value
            , engd_etiqueta AS label
        FROM
            tbl_entidad_grupo_dato_engd
        ]]>
        <include refid="SelectWhere" />
        ORDER BY engd_enti_pk, engd_etiqueta
    </select>

    <select id="exists" parameterType="EntidadGrupoDatoVO" resultType="boolean">
        <![CDATA[
        SELECT COUNT(1)
        FROM tbl_entidad_grupo_dato_engd engd
        WHERE engd_enti_pk = #{entiId} AND engd_orden = #{numero}
        ]]>
    </select>

    <insert id="insert" parameterType="EntidadGrupoDatoVO">
        <![CDATA[
        INSERT INTO tbl_entidad_grupo_dato_engd (
            engd_enti_pk, engd_orden, engd_etiqueta)
        VALUES (#{entiId}, #{numero}, #{etiqueta})
        ]]>
    </insert>

    <update id="update" parameterType="EntidadGrupoDatoVO">
        <![CDATA[
        UPDATE tbl_entidad_grupo_dato_engd SET
            engd_etiqueta = #{etiqueta}
        WHERE engd_enti_pk = #{entiId} AND engd_orden = #{numero}
        ]]>
    </update>

    <delete id="delete" parameterType="EntidadGrupoDatoCriterioVO">
        <![CDATA[
        DELETE FROM tbl_entidad_grupo_dato_engd
        ]]>
        <where>
            engd_enti_pk = #{entiId}

            <if test="numero != null">
                AND engd_orden = #{numero}
            </if>
        </where>
    </delete>
</mapper>
