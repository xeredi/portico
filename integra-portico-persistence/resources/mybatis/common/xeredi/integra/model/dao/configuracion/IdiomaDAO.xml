<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xeredi.integra.model.dao.configuracion.IdiomaDAO">
    <resultMap type="IdiomaVO" id="ResultMap">
        <id column="cnid_pk" property="id" />
        <result column="cnid_codigo" property="codigo" />
        <result column="cnid_descripcion" property="descripcion" />
    </resultMap>

    <sql id="SelectPrefix">
    <![CDATA[
    SELECT
        cnid_pk, cnid_codigo, cnid_descripcion
    FROM tbl_configuracion_idioma_cnid
    ]]>
    </sql>

    <sql id="SelectCountPrefix">
    <![CDATA[
    SELECT
        COUNT(1)
    FROM tbl_configuracion_idioma_cnid
    ]]>
    </sql>

    <sql id="SelectWhere">
        <where>
            <if test="id != null">
                AND cnid_pk = #{id}
            </if>
            <if test="codigo != null">
                AND cnid_codigo = #{codigo}
            </if>
        </where>
    </sql>

    <select id="selectAllMap" resultMap="ResultMap">
        <include refid="SelectPrefix" />
    </select>

    <select id="selectAllList" resultMap="ResultMap">
        <include refid="SelectPrefix" />
        ORDER BY cnid_codigo
    </select>

    <select id="select" resultMap="ResultMap" parameterType="Long">
        <include refid="SelectPrefix" />
        WHERE cnid_pk = #{value}
    </select>

    <select id="exists" resultType="Boolean" parameterType="IdiomaVO">
        <include refid="SelectCountPrefix" />
        WHERE cnid_codigo = #{codigo}
    </select>

    <select id="selectCodigosList" resultType="String">
        SELECT
            cnid_codigo
        FROM tbl_configuracion_idioma_cnid
        ORDER BY cnid_codigo
    </select>

    <insert id="insert" parameterType="IdiomaVO">
        <selectKey keyProperty="id" resultType="Long" order="BEFORE">
            SELECT
            NEXTVAL('sq_integra')
        </selectKey>
        <![CDATA[
        INSERT INTO tbl_configuracion_idioma_cnid(cnid_pk, cnid_codigo, cnid_descripcion)
        VALUES(#{id}, #{codigo}, #{descripcion})
        ]]>
    </insert>

    <update id="update" parameterType="IdiomaVO">
        <![CDATA[
        UPDATE tbl_configuracion_idioma_cnid SET
            cnid_descripcion = #{descripcion}
        WHERE cnid_pk = #{id}
        ]]>
    </update>
</mapper>
