<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xeredi.integra.model.maestro.dao.ParametroI18nDAO">
	<resultMap type="ParametroI18nVO" id="ResultMap">
		<result column="p18n_prvr_pk" property="prvrId" />
		<result column="p18n_idioma" property="idioma" />
		<result column="p18n_texto" property="texto" />
	</resultMap>

	<sql id="SelectPrefix">
    <![CDATA[
    SELECT
        p18n.p18n_prvr_pk, p18n.p18n_idioma, p18n.p18n_texto
    FROM tbl_parametro_i18n_p18n p18n
    ]]>
	</sql>

	<sql id="SelectWhere">
		<where>
			<if test="prvrIds != null">
            <![CDATA[
            AND p18n.p18n_prvr_pk IN
            ]]>
				<foreach collection="prvrIds" item="item" open="(" close=")"
					separator=",">#{item}</foreach>
			</if>
		</where>
	</sql>

	<select id="selectList" parameterType="ParametroCriterioVO"
		resultMap="ResultMap">
		<include refid="SelectPrefix" />
		<include refid="SelectWhere" />
        <![CDATA[
        ORDER BY p18n.p18n_prvr_pk, p18n.p18n_idioma
        ]]>
	</select>

    <insert id="insert" parameterType="ParametroI18nVO">
    <![CDATA[
        INSERT INTO tbl_parametro_i18n_p18n (p18n_prvr_pk, p18n_idioma, p18n_texto)
        VALUES (#{prvrId}, #{idioma}, #{texto})
    ]]>
    </insert>

    <update id="update" parameterType="ParametroI18nVO">
    <![CDATA[
        UPDATE tbl_parametro_i18n_p18n SET
            p18n_texto = #{texto}
        WHERE
            p18n_prvr_pk = #{prvrId}
            AND p18n_idioma = #{idioma}
    ]]>
    </update>

    <delete id="deleteVersion" parameterType="ParametroVO">
    <![CDATA[
        DELETE FROM tbl_parametro_i18n_p18n
        WHERE
            p18n_prvr_pk = #{prvr.id}
    ]]>
    </delete>
</mapper>
