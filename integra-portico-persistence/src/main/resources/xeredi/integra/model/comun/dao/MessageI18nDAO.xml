<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="xeredi.integra.model.comun.dao.MessageI18nDAO">
    <resultMap type="MessageI18nVO" id="ResultMap">
        <id column="msbl_bundle" />
        <id column="m18n_language" />
        <id column="m18n_key" />

        <result column="msbl_bundle" property="bundle" />
        <result column="m18n_language" property="language" />
        <result column="m18n_key" property="key" />
        <result column="m18n_value" property="value" />
    </resultMap>

    <sql id="SelectPrefix">
    <![CDATA[
    SELECT
        m18n_language, m18n_key, m18n_value
        , msbl_bundle
    FROM tbl_message_i18n_m18n
        INNER JOIN tbl_message_bundle_msbl ON
            msbl_key = m18n_key
    ]]>
    </sql>

    <sql id="SelectWhere">
        <where>
            <if test="bundle != null">
                AND msbl_bundle = #{bundle}
            </if>
            <if test="language != null">
                AND m18n_language = #{language}
            </if>
            <if test="key != null">
                AND m18n_key = #{key}
            </if>
        </where>
    </sql>

    <select id="selectObject" parameterType="MessageI18nCriterioVO" resultMap="ResultMap">
        <include refid="SelectPrefix" />
        <include refid="SelectWhere" />
    </select>

    <select id="selectList" parameterType="MessageI18nCriterioVO" resultMap="ResultMap">
        <include refid="SelectPrefix" />
        <include refid="SelectWhere" />
        ORDER BY m18n_key, m18n_language
    </select>

    <select id="selectLanguageList" resultType="String">
    <![CDATA[
        SELECT DISTINCT m18n_language
        FROM tbl_message_i18n_m18n
        ORDER BY m18n_language
    ]]>
    </select>

    <select id="selectKeyList" parameterType="MessageI18nBundlename" resultType="String">
    <![CDATA[
        SELECT DISTINCT msbl_key
        FROM tbl_message_bundle_msbl
        WHERE msbl_bundle = #{value}
        ORDER BY msbl_key
    ]]>
    </select>

    <update id="update" parameterType="MessageI18nVO">
    <![CDATA[
        UPDATE tbl_message_i18n_m18n SET
            m18n_value = #{value}
        WHERE
            m18n_language = #{language}
            AND m18n_key = #{key}
    ]]>
    </update>
</mapper>
