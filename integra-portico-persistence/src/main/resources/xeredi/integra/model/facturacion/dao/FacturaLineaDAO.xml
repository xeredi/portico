<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xeredi.integra.model.facturacion.dao.FacturaLineaDAO">
    <resultMap type="FacturaLineaVO" id="ResultMap">
        <id column="fctl_pk" />

        <result column="fctl_pk" property="id" />
        <result column="fctl_fctr_pk" property="fctrId" />
        <result column="fctl_fcts_pk" property="fctsId" />

        <result column="fctl_importe_base" property="importeBase" />
        <result column="fctl_importe" property="importe" />

        <result column="fctl_cuant1" property="cuant1" />
        <result column="fctl_cuant2" property="cuant2" />
        <result column="fctl_cuant3" property="cuant3" />
        <result column="fctl_cuant4" property="cuant4" />
        <result column="fctl_cuant5" property="cuant5" />
        <result column="fctl_cuant6" property="cuant6" />

        <result column="fctl_info1" property="info1" />
        <result column="fctl_info2" property="info2" />
        <result column="fctl_info3" property="info3" />
        <result column="fctl_info4" property="info4" />
        <result column="fctl_info5" property="info5" />
        <result column="fctl_info6" property="info6" />

        <association property="rgla" resultMap="xeredi.integra.model.facturacion.dao.ReglaDAO.ResultMap" />
        <association property="impuesto" resultMap="xeredi.integra.model.maestro.dao.ParametroDAO.ResultMap" />
        <association property="ssrv" resultMap="xeredi.integra.model.maestro.dao.ParametroDAO.ResultMap" />
    </resultMap>

    <insert id="insert" parameterType="FacturaLineaVO">
    <![CDATA[
        INSERT INTO tbl_factura_lin_fctl (
            fctl_pk, fctl_fctr_pk, fctl_fcts_pk, fctl_rgla_pk, fctl_impuesto_prmt_pk, fctl_ssrv_pk
            , fctl_cuant1, fctl_cuant2, fctl_cuant3, fctl_cuant4, fctl_cuant5, fctl_cuant6
            , fctl_info1, fctl_info2, fctl_info3, fctl_info4, fctl_info5, fctl_info6
        ) VALUES (
            #{id}, #{fctrId}, #{fctsId}, #{rgla.id}, #{impuesto.id}, #{ssrv.id}
            , #{cuant1}, #{cuant2}, #{cuant3}, #{cuant4}, #{cuant5}, #{cuant6}
            , #{info1}, #{info2}, #{info3}, #{info4}, #{info5}, #{info6}
        )
    ]]>
    </insert>

    <sql id="SelectPrefix">
    <![CDATA[
        SELECT *
        FROM vw_factura_lin_fctl
    ]]>
    </sql>

    <sql id="SelectWhere">
        <where>
            <if test="id != null">
                AND fctl_pk = #{id}
            </if>
            <if test="ids != null">
                AND fctl_pk IN
                <foreach collection="ids" item="item" open="(" close=")" separator=",">#{item}
                </foreach>
            </if>
            <if test="fctr != null">
                <if test="fctr.id != null">
                    AND fctl_fctr_pk = #{fctr.id}
                </if>
                <if test="fctr.ids != null">
                    AND fctl_fctr_pk IN
                    <foreach collection="fctr.ids" item="item" open="(" close=")" separator=",">#{item}
                    </foreach>
                </if>
            </if>
        </where>
    </sql>

    <select id="select" resultMap="ResultMap" parameterType="Long">
        <include refid="SelectPrefix" />
        WHERE fctl_pk = #{value}
    </select>

    <select id="selectList" resultMap="ResultMap" parameterType="FacturaLineaCriterioVO">
        <include refid="SelectPrefix" />
        <include refid="SelectWhere" />
        ORDER BY fctl_fctr_pk, fctl_pk
    </select>

    <select id="count" resultType="Integer" parameterType="FacturaLineaCriterioVO">
        SELECT COUNT(1) FROM vw_factura_lin_fctl
        <include refid="SelectWhere" />
    </select>
</mapper>
