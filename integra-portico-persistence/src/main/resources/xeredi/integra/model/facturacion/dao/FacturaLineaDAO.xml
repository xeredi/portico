<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xeredi.integra.model.facturacion.dao.FacturaLineaDAO">
	<resultMap type="FacturaLineaVO" id="ResultMap">
		<id column="fctl_pk" />

		<result column="fctl_pk" property="id" />
		<result column="fctl_padre_pk" property="padreId" />
		<result column="fctl_fctr_pk" property="fctrId" />
		<result column="fctl_fini" property="fini" />
		<result column="fctl_ffin" property="ffin" />

		<result column="fctl_importe_base" property="importeBase" />
		<result column="fctl_importe" property="importe" />
		<result column="fctl_fctd_count" property="fctdCount" />

		<result column="fctl_cuant1" property="cuant1" />
		<result column="fctl_cuant2" property="cuant2" />
		<result column="fctl_cuant3" property="cuant3" />
		<result column="fctl_cuant4" property="cuant4" />
		<result column="fctl_cuant5" property="cuant5" />
		<result column="fctl_cuant6" property="cuant6" />

		<result column="fctl_info1" property="info1" />
		<result column="fctl_info2" property="info2" />
		<result column="fctl_info3" property="info3" />
		<result column="fctl_info4" property="info4" />
		<result column="fctl_info5" property="info5" />
		<result column="fctl_info6" property="info6" />

		<association property="rgla" javaType="ReglaVO">
			<result column="fctl_rgla_pk" property="id" />
			<result column="rgla_codigo" property="codigo" />
			<result column="rgla_tipo" property="tipo" />

			<association property="enti" javaType="EntidadVO">
				<result column="rgla_enti_pk" property="id" />
			</association>

			<association property="rglv" javaType="ReglaVersionVO">
				<result column="rglv_etiq_info1" property="etiqInfo1" />
				<result column="rglv_etiq_info2" property="etiqInfo2" />
				<result column="rglv_etiq_info3" property="etiqInfo3" />
				<result column="rglv_etiq_info4" property="etiqInfo4" />
				<result column="rglv_etiq_info5" property="etiqInfo5" />
				<result column="rglv_etiq_info6" property="etiqInfo6" />

				<result column="rglv_etiq_cuant1" property="etiqCuant1" />
				<result column="rglv_etiq_cuant2" property="etiqCuant2" />
				<result column="rglv_etiq_cuant3" property="etiqCuant3" />
				<result column="rglv_etiq_cuant4" property="etiqCuant4" />
				<result column="rglv_etiq_cuant5" property="etiqCuant5" />
				<result column="rglv_etiq_cuant6" property="etiqCuant6" />
			</association>
		</association>

		<association property="impuesto" javaType="ParametroVO">
			<result column="fctl_impuesto_prmt_pk" property="id" />
			<result column="fctl_impuesto_prmt" property="parametro" />
			<result column="fctl_impuesto_tppr_pk" property="entiId" />
		</association>

		<association property="fcts" javaType="FacturaServicioVO">
			<result column="fctl_fcts_pk" property="id" />
			<result column="fcts_fref" property="fref" />

			<association property="srvc" javaType="ServicioVO">
				<result column="fcts_srvc_pk" property="id" />
				<result column="srvc_anno" property="anno" />
				<result column="srvc_numero" property="numero" />
				<result column="srvc_tpsr_pk" property="entiId" />

				<association property="prto" javaType="PuertoVO">
					<result column="srvc_subp_pk" property="id" />
					<result column="srvc_subp" property="codigo" />
				</association>
			</association>
		</association>

		<association property="ssrv" javaType="SubservicioVO">
			<result column="fctl_ssrv_pk" property="id" />
			<result column="ssrv_numero" property="numero" />
		</association>
	</resultMap>

	<sql id="SelectPrefix">
    <![CDATA[
		SELECT
		    fctl_pk, fctl_padre_pk, fctl_fctr_pk, fctl_fcts_pk, fctl_rgla_pk, fctl_impuesto_prmt_pk, fctl_ssrv_pk
		    , fctl_fini, fctl_ffin
		    , fctl_cuant1, fctl_cuant2, fctl_cuant3, fctl_cuant4, fctl_cuant5, fctl_cuant6
		    , fctl_info1, fctl_info2, fctl_info3, fctl_info4, fctl_info5, fctl_info6

		    , rgla_codigo, rgla_tipo, rgla_enti_pk

		    , prmt_parametro AS fctl_impuesto_prmt
		    , prmt_tppr_pk AS fctl_impuesto_tppr_pk

		    , fcts_srvc_pk, fcts_fref

		    , srvc_subp_pk, srvc_anno, srvc_numero, srvc_tpsr_pk

			, rglv_etiq_info1, rglv_etiq_info2, rglv_etiq_info3, rglv_etiq_info4, rglv_etiq_info5, rglv_etiq_info6
			, rglv_etiq_cuant1, rglv_etiq_cuant2, rglv_etiq_cuant3, rglv_etiq_cuant4, rglv_etiq_cuant5, rglv_etiq_cuant6

		    , (SELECT prmt_parametro FROM tbl_parametro_prmt WHERE prmt_pk = srvc_subp_pk) AS srvc_subp
		    , (SELECT ssrv_numero FROM tbl_subservicio_ssrv WHERE ssrv_pk = fctl_ssrv_pk) AS ssrv_numero

		    , (SELECT SUM(fctd_importe_base) FROM tbl_factura_det_fctd WHERE fctd_fctl_pk = fctl_pk) AS fctl_importe_base
		    , (SELECT SUM(fctd_importe) FROM tbl_factura_det_fctd WHERE fctd_fctl_pk = fctl_pk) AS fctl_importe
		    , (SELECT COUNT(1) FROM tbl_factura_det_fctd WHERE fctd_fctl_pk = fctl_pk) AS fctl_fctd_count
		FROM
		    tbl_factura_lin_fctl
		    INNER JOIN tbl_factura_srv_fcts ON
		        fcts_pk = fctl_fcts_pk
		    INNER JOIN tbl_regla_rgla ON
		        rgla_pk = fctl_rgla_pk
		    INNER JOIN tbl_regla_version_rglv ON
		        rglv_rgla_pk = rgla_pk
		        AND fcts_fref BETWEEN rglv_fini AND COALESCE(rglv_ffin, fcts_fref)
		    INNER JOIN tbl_parametro_prmt ON
		        prmt_pk = fctl_impuesto_prmt_pk
		    INNER JOIN tbl_servicio_srvc ON
		    	srvc_pk = fcts_srvc_pk
    ]]>
	</sql>

	<sql id="SelectWhere">
		<where>
			<if test="id != null">
				AND fctl_pk = #{id}
			</if>
			<if test="ids != null">
				AND fctl_pk IN
				<foreach collection="ids" item="item" open="(" close=")" separator=",">#{item}
				</foreach>
			</if>
			<if test="fctr != null">
				<if test="fctr.id != null">
					AND fctl_fctr_pk = #{fctr.id}
				</if>
				<if test="fctr.ids != null">
					AND fctl_fctr_pk IN
					<foreach collection="fctr.ids" item="item" open="(" close=")" separator=",">#{item}
					</foreach>
				</if>

				<if test="fctr.fcts != null">
					<if test="fctr.fcts.id != null">
                    <![CDATA[
                        AND EXISTS (
                            SELECT 1
                            FROM tbl_factura_srv_fcts
                            WHERE fcts_pk = fctl_fcts_pk
                                AND fcts_pk = #{fctr.fcts.id}
                        )
                    ]]>
					</if>
				</if>
			</if>
		</where>
	</sql>

	<select id="select" resultMap="ResultMap" parameterType="Long">
		<include refid="SelectPrefix" />
		WHERE fctl_pk = #{value}
	</select>

	<select id="selectList" resultMap="ResultMap" parameterType="FacturaLineaCriterioVO">
		<include refid="SelectPrefix" />
		<include refid="SelectWhere" />
		ORDER BY fctl_fctr_pk, fctl_padre_pk, fctl_pk
	</select>

	<select id="selectPaginatedList" resultMap="ResultMap" parameterType="FacturaLineaCriterioVO">
		<include refid="SelectPrefix" />
		<include refid="SelectWhere" />
		ORDER BY fctl_fctr_pk, fctl_padre_pk, fctl_pk
	</select>

	<select id="count" resultType="Integer" parameterType="FacturaLineaCriterioVO">
		SELECT COUNT(1)
		FROM
		tbl_factura_lin_fctl
		<include refid="SelectWhere" />
	</select>

	<insert id="insert" parameterType="FacturaLineaVO">
    <![CDATA[
        INSERT INTO tbl_factura_lin_fctl (
            fctl_pk, fctl_padre_pk, fctl_fctr_pk, fctl_fcts_pk, fctl_rgla_pk, fctl_impuesto_prmt_pk, fctl_ssrv_pk, fctl_fini, fctl_ffin
            , fctl_cuant1, fctl_cuant2, fctl_cuant3, fctl_cuant4, fctl_cuant5, fctl_cuant6
            , fctl_info1, fctl_info2, fctl_info3, fctl_info4, fctl_info5, fctl_info6
        ) VALUES (
            #{id}, #{padreId}, #{fctrId}, #{fcts.id}, #{rgla.id}, #{impuesto.id}, #{ssrv.id}, #{fini}, #{ffin}
            , #{cuant1}, #{cuant2}, #{cuant3}, #{cuant4}, #{cuant5}, #{cuant6}
            , #{info1}, #{info2}, #{info3}, #{info4}, #{info5}, #{info6}
        )
    ]]>
	</insert>
</mapper>
