<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xeredi.integra.model.estadistica.dao.PeriodoProcesoDAO">
	<resultMap type="PeriodoProcesoVO" id="ResultMap">
		<id column="pepr_pk" property="id" />
		<result column="pepr_anio" property="anio" />
		<result column="pepr_mes" property="mes" />
		<result column="pepr_trimestre" property="trimestre" />
		<result column="pepr_freferencia" property="freferencia" />
		<result column="pepr_falta" property="falta" />
		<result column="pepr_cdms_generado" property="cdmsGenerado" />

		<association property="autp" javaType="ParametroVO">
			<id column="pepr_autp_pk" property="id" />
			<result column="prmt_parametro" property="parametro" />
		</association>

		<association property="arin" javaType="ArchivoInfoVO">
			<id column="pepr_arch_pk" property="id" />
			<id column="arch_nombre" property="nombre" />
			<id column="arch_tamanio" property="tamanio" />
		</association>
	</resultMap>

	<sql id="SelectPrefix">
    <![CDATA[
    SELECT
        pepr_pk, pepr_anio, pepr_mes, pepr_trimestre, pepr_freferencia, pepr_falta
        , pepr_autp_pk, prmt_parametro, pepr_arch_pk, arch_nombre, arch_tamanio
        , (
            CASE
                WHEN EXISTS (
                    SELECT 1
                    FROM tbl_cuadro_mes_cdms
                    WHERE cdms_pepr_pk = pepr_pk
                )
                THEN 1
                ELSE 0
            END
        ) AS pepr_cdms_generado
    FROM tbl_periodo_proceso_pepr
        JOIN tbl_parametro_prmt ON
            prmt_pk = pepr_autp_pk
        LEFT JOIN tbl_archivo_arch ON
            arch_pk = pepr_arch_pk
    ]]>
	</sql>

	<sql id="SelectCountPrefix">
    <![CDATA[
    SELECT
        COUNT(1)
    FROM tbl_periodo_proceso_pepr
        JOIN tbl_parametro_prmt ON
            prmt_pk = pepr_autp_pk
    ]]>
	</sql>

	<sql id="SelectWhere">
		<where>
			<if test="anio != null">
				AND pepr_anio = #{anio}
			</if>
			<if test="mes != null">
				AND pepr_mes = #{mes}
			</if>
			<if test="trimestre != null">
				AND pepr_trimestre = #{trimestre}
			</if>
			<if test="autpId != null">
				AND pepr_autp_pk = #{autpId}
			</if>
		</where>
	</sql>

	<select id="selectCount" parameterType="PeriodoProcesoCriterioVO"
		resultType="Integer">
		<include refid="SelectCountPrefix" />
		<include refid="SelectWhere" />
	</select>

	<select id="selectList" parameterType="PeriodoProcesoCriterioVO"
		resultMap="ResultMap">
		<include refid="SelectPrefix" />
		<include refid="SelectWhere" />
		ORDER BY prmt_parametro, pepr_anio DESC, pepr_mes DESC
	</select>

	<select id="selectPaginatedList" parameterType="PeriodoProcesoCriterioVO"
		resultMap="ResultMap">
		<include refid="SelectPrefix" />
		<include refid="SelectWhere" />
		ORDER BY prmt_parametro, pepr_anio DESC, pepr_mes DESC
	</select>

	<select id="selectObject" parameterType="PeriodoProcesoCriterioVO"
		resultMap="ResultMap">
		<include refid="SelectPrefix" />
		<include refid="SelectWhere" />
	</select>

	<select id="select" parameterType="Long" resultMap="ResultMap">
		<include refid="SelectPrefix" />
		WHERE pepr_pk = #{value}
	</select>

	<select id="exists" parameterType="ParametroVO" resultType="Boolean">
        <![CDATA[
        SELECT COUNT(1)
        FROM tbl_periodo_proceso_pepr
        WHERE pepr_autp_pk = #{autp.id}
            AND pepr_anio = #{anio}
            AND pepr_mes = #{mes}
        ]]>
	</select>

	<insert id="insert" parameterType="ParametroVO">
        <![CDATA[
        INSERT INTO tbl_periodo_proceso_pepr(pepr_pk, pepr_autp_pk, pepr_anio, pepr_mes, pepr_trimestre, pepr_freferencia, pepr_falta, pepr_arch_pk)
        VALUES (#{id}, #{autp.id}, #{anio}, #{mes}, #{trimestre}, #{freferencia}, #{falta}, #{arin.id})
        ]]>
	</insert>

	<delete id="delete" parameterType="Long">
        <![CDATA[
        DELETE FROM tbl_periodo_proceso_pepr
        WHERE pepr_pk = #{value}
        ]]>
	</delete>
</mapper>
