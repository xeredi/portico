<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xeredi.integra.model.dao.metamodelo.EntidadAccionDAO">
    <resultMap type="EntidadAccionVO" id="ResultMap">
        <id column="enac_enti_pk" property="entiId" />
        <id column="enac_path" property="path" />
        <result column="enac_etiqueta" property="etiqueta" />
        <result column="enac_orden" property="orden" />
    </resultMap>

    <sql id="SelectPrefix">
    <![CDATA[
    SELECT
        enac.enac_enti_pk, enac.enac_path, enac.enac_etiqueta, enac.enac_orden
    FROM
        tbl_entidad_accion_enac enac
    ]]>
    </sql>

    <sql id="SelectWhere">
        <where>
            <if test="entiId != null">
                AND enac.enac_enti_pk = #{entiId}
            </if>
            <if test="path != null">
                AND enac.enac_path = #{path}
            </if>
        </where>
    </sql>

    <select id="selectObject" parameterType="EntidadAccionCriterioVO" resultMap="ResultMap">
        <include refid="SelectPrefix" />
        <include refid="SelectWhere" />
    </select>

    <select id="selectList" parameterType="EntidadAccionCriterioVO" resultMap="ResultMap">
        <include refid="SelectPrefix" />
        <include refid="SelectWhere" />
        ORDER BY enac.enac_orden
    </select>

    <select id="selectAll" resultMap="ResultMap">
        <include refid="SelectPrefix" />
        ORDER BY enac.enac_enti_pk, enac.enac_orden
    </select>

    <select id="exists" parameterType="EntidadAccionVO" resultType="boolean">
        <![CDATA[
        SELECT COUNT(1)
        FROM tbl_entidad_accion_enac enac
        WHERE enac.enac_enti_pk = #{entiId}
            AND enac.enac_path = #{path}
        ]]>
    </select>

    <insert id="insert" parameterType="EntidadAccionVO">
        <![CDATA[
        INSERT INTO tbl_entidad_accion_enac (enac_enti_pk, enac_path, enac_etiqueta, enac_orden)
        VALUES (#{entiId}, #{path}, #{etiqueta}, #{orden})
        ]]>
    </insert>

    <update id="update" parameterType="EntidadAccionVO">
        <![CDATA[
        UPDATE tbl_entidad_accion_enac SET
            enac_etiqueta = #{etiqueta}
            , enac_orden = #{orden}
        WHERE enac_enti_pk = #{entiId}
            AND enac_path = #{path}
        ]]>
    </update>

    <update id="delete" parameterType="EntidadAccionVO">
        <![CDATA[
        DELETE FROM tbl_entidad_accion_enac
        WHERE enac_enti_pk = #{entiId}
            AND enac_path = #{path}
        ]]>
    </update>
</mapper>
