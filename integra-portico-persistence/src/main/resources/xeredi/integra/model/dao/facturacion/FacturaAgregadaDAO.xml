<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xeredi.integra.model.dao.facturacion.FacturaAgregadaDAO">
    <resultMap type="FacturaAgregadaVO" id="ResultMap">
        <id column="fctr_pk" />
        <id column="fctr_pagador_prmt_pk" />
        <id column="fctr_info1" />
        <id column="fctr_info2" />
        <id column="fctr_info3" />
        <id column="fctr_info4" />
        <id column="fctr_info5" />
        <id column="fctr_info6" />

        <association property="fctr" javaType="FacturaVO">
            <result column="fctr_pk" property="id" />
            <result column="fctr_info1" property="info1" />
            <result column="fctr_info2" property="info2" />
            <result column="fctr_info3" property="info3" />
            <result column="fctr_info4" property="info4" />
            <result column="fctr_info5" property="info5" />
            <result column="fctr_info6" property="info6" />

            <association property="pagador" columnPrefix="fctr_pagador_"
                resultMap="xeredi.integra.model.dao.maestro.ParametroDAO.ResultMap" />
        </association>
        <collection property="fctsList" ofType="FacturaServicioAgregadaVO" javaType="ArrayList">
            <id column="fcts_pk" />

            <association property="fcts" javaType="FacturaServicioVO">
                <result column="fcts_pk" property="id" />
                <result column="fcts_fref" property="fref" />
                <result column="fcts_fini" property="fini" />
                <result column="fcts_ffin" property="ffin" />

                <association property="srvc" columnPrefix="fcts_"
                    resultMap="xeredi.integra.model.dao.servicio.ServicioDAO.ResultMap" />
                <association property="aspc" columnPrefix="fcts_"
                    resultMap="xeredi.integra.model.dao.facturacion.AspectoDAO.ResultMap" />
            </association>

            <collection property="fctlList" ofType="FacturaLineaAgregadaVO" javaType="ArrayList">
                <id column="fctl_pk" />

                <association property="fctl" javaType="FacturaLineaVO">
                    <result column="fctl_pk" property="id" />
                    <result column="fctl_cuant1" property="cuant1" />
                    <result column="fctl_cuant2" property="cuant2" />
                    <result column="fctl_cuant3" property="cuant3" />
                    <result column="fctl_cuant4" property="cuant4" />
                    <result column="fctl_cuant5" property="cuant5" />
                    <result column="fctl_cuant6" property="cuant6" />
                    <result column="fctl_info1" property="info1" />
                    <result column="fctl_info2" property="info2" />
                    <result column="fctl_info3" property="info3" />
                    <result column="fctl_info4" property="info4" />
                    <result column="fctl_info5" property="info5" />
                    <result column="fctl_info6" property="info6" />

                    <association property="rgla" columnPrefix="fctl_"
                        resultMap="xeredi.integra.model.dao.facturacion.ReglaDAO.ResultMap" />
                    <association property="impuesto" columnPrefix="fctl_impuesto_"
                        resultMap="xeredi.integra.model.dao.maestro.ParametroDAO.ResultMap" />
                    <association property="ssrv" columnPrefix="fctl_"
                        resultMap="xeredi.integra.model.dao.servicio.SubservicioDAO.ResultMap" />
                </association>

                <collection property="fctdList" ofType="FacturaDetalleVO" javaType="ArrayList">
                    <result column="fctd_pk" property="id" />
                    <result column="fctd_importe_base" property="importeBase" />
                    <result column="fctd_importe" property="importe" />
                    <result column="fctd_pk" property="id" />
                    <result column="fctd_cuant1" property="cuant1" />
                    <result column="fctd_cuant2" property="cuant2" />
                    <result column="fctd_cuant3" property="cuant3" />
                    <result column="fctd_cuant4" property="cuant4" />
                    <result column="fctd_cuant5" property="cuant5" />
                    <result column="fctd_cuant6" property="cuant6" />
                    <result column="fctd_info1" property="info1" />
                    <result column="fctd_info2" property="info2" />
                    <result column="fctd_info3" property="info3" />
                    <result column="fctd_info4" property="info4" />
                    <result column="fctd_info5" property="info5" />
                    <result column="fctd_info6" property="info6" />

                    <association property="ssrv" columnPrefix="fctd_"
                        resultMap="xeredi.integra.model.dao.servicio.SubservicioDAO.ResultMap" />
                </collection>
            </collection>
        </collection>
    </resultMap>

    <select id="selectList" parameterType="FacturadorContextoVO" resultMap="ResultMap">
        <![CDATA[
            SELECT
        ]]>

        <if test="aspc == null">
        <![CDATA[
            vlrc_pk AS fctr_pk
            , vlrc_pagador_prmt_pk AS fctr_pagador_prmt_pk

            , vlrc_info1 AS fctr_info1
            , vlrc_info2 AS fctr_info2
            , vlrc_info3 AS fctr_info3
            , vlrc_info4 AS fctr_info4
            , vlrc_info5 AS fctr_info5
            , vlrc_info6 AS fctr_info6
        ]]>
        </if>
        <if test="aspc != null">
            <![CDATA[
            NULL AS fctr_pk
            , vlrc_pagador_prmt_pk AS fctr_pagador_prmt_pk
            ]]>

            <if test="aspc.aspv.cgrpInfo1">
                , vlrc_info1 AS fctr_info1
            </if>
            <if test="aspc.aspv.cgrpInfo2">
                , vlrc_info2 AS fctr_info2
            </if>
            <if test="aspc.aspv.cgrpInfo3">
                , vlrc_info3 AS fctr_info3
            </if>
            <if test="aspc.aspv.cgrpInfo4">
                , vlrc_info4 AS fctr_info4
            </if>
            <if test="aspc.aspv.cgrpInfo5">
                , vlrc_info5 AS fctr_info5
            </if>
            <if test="aspc.aspv.cgrpInfo6">
                , vlrc_info6 AS fctr_info6
            </if>
        </if>

        <![CDATA[
        	, vlrc_pk AS fcts_pk
        	, vlrc_srvc_pk AS fcts_srvc_pk
        	, vlrc_fref AS fcts_fref
        	, vlrc_fini AS fcts_fini
        	, vlrc_ffin AS fcts_ffin
            , vlrc_aspc_pk AS fcts_aspc_pk

        	, vlrl_pk AS fctl_pk
        	, vlrl_rgla_pk AS fctl_rgla_pk
        	, vlrl_impuesto_prmt_pk AS fctl_impuesto_prmt_pk
        	, vlrl_ssrv_pk AS fctl_ssrv_pk
        	, vlrl_cuant1 AS fctl_cuant1
        	, vlrl_cuant2 AS fctl_cuant2
        	, vlrl_cuant3 AS fctl_cuant3
        	, vlrl_cuant4 AS fctl_cuant4
        	, vlrl_cuant5 AS fctl_cuant5
        	, vlrl_cuant6 AS fctl_cuant6
        	, vlrl_info1 AS fctl_info1
        	, vlrl_info2 AS fctl_info2
        	, vlrl_info3 AS fctl_info3
        	, vlrl_info4 AS fctl_info4
        	, vlrl_info5 AS fctl_info5
        	, vlrl_info6 AS fctl_info6

        	, vlrd_pk AS fctd_pk
        	, vlrd_importe_base AS fctd_importe_base
        	, vlrd_importe AS fctd_importe
        	, vlrd_ssrv_pk AS fctd_ssrv_pk
        	, vlrd_cuant1 AS fctd_cuant1
        	, vlrd_cuant2 AS fctd_cuant2
        	, vlrd_cuant3 AS fctd_cuant3
        	, vlrd_cuant4 AS fctd_cuant4
        	, vlrd_cuant5 AS fctd_cuant5
        	, vlrd_cuant6 AS fctd_cuant6
        	, vlrd_info1 AS fctd_info1
        	, vlrd_info2 AS fctd_info2
        	, vlrd_info3 AS fctd_info3
        	, vlrd_info4 AS fctd_info4
        	, vlrd_info5 AS fctd_info5
        	, vlrd_info6 AS fctd_info6
        FROM
        	vw_valoracion_vlrc
        	INNER JOIN vw_valoracion_lin_vlrl ON
        		vlrl_vlrc_pk = vlrc_pk
        	INNER JOIN vw_valoracion_det_vlrd ON
        		vlrd_vlrl_pk = vlrl_pk
        		AND vlrd_vlrc_pk = vlrc_pk
        WHERE vlrc_pk IN
        ]]>
        <foreach collection="vlrcIds" item="item" open="(" close=")" separator=",">#{item}
        </foreach>
        <![CDATA[
        ORDER BY
            fctr_pk, fctr_pagador_prmt_pk
        ]]>
        <if test="aspc != null">
            <if test="aspc.aspv.cgrpInfo1">
                , fctr_info1
            </if>
            <if test="aspc.aspv.cgrpInfo2">
                , fctr_info2
            </if>
            <if test="aspc.aspv.cgrpInfo3">
                , fctr_info3
            </if>
            <if test="aspc.aspv.cgrpInfo4">
                , fctr_info4
            </if>
            <if test="aspc.aspv.cgrpInfo5">
                , fctr_info5
            </if>
            <if test="aspc.aspv.cgrpInfo6">
                , fctr_info6
            </if>
        </if>
        <![CDATA[
            , fcts_pk, fctl_pk, fctd_pk
        ]]>
    </select>
</mapper>
