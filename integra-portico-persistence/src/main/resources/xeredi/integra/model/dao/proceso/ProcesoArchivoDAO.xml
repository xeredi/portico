<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xeredi.integra.model.dao.proceso.ProcesoArchivoDAO">
    <resultMap type="ProcesoArchivoVO" id="ResultMap">
        <id column="prar_prbt_pk" property="prbtId" />
        <result column="prar_nombre" property="nombre" />
        <result column="prar_sentido" property="sentido" />
    </resultMap>

    <sql id="SelectPrefix">
    <![CDATA[
    SELECT
        prar.prar_prbt_pk
        , prar.prar_nombre
        , prar.prar_sentido
    FROM
        tbl_proceso_archivo_prar prar
    ]]>
    </sql>

    <select id="selectList" parameterType="Long" resultMap="ResultMap">
        <include refid="SelectPrefix" />
        <![CDATA[
        WHERE prar.prar_prbt_pk = #{value}
        ]]>
    </select>

    <insert id="insert" parameterType="ProcesoArchivoVO">
        <![CDATA[
        INSERT INTO tbl_proceso_archivo_prar (prar_prbt_pk, prar_nombre, prar_sentido)
        VALUES (#{prbtId}, #{nombre}, #{sentido})
        ]]>
    </insert>

    <delete id="delete" parameterType="Long">
        <![CDATA[
        DELETE FROM tbl_proceso_archivo_prar
        WHERE
            prar_prbt_pk = #{value}
        ]]>
    </delete>
</mapper>
