<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xeredi.integra.model.metamodelo.dao.EntidadAccionDAO">
    <resultMap type="EntidadAccionVO" id="ResultMap">
        <id column="enac_pk"/>

        <result column="enac_pk" property="id" />
        <result column="enac_enti_pk" property="entiId" />
        <result column="enac_path" property="path" />
        <result column="enac_etiqueta" property="etiqueta" />
        <result column="enac_orden" property="orden" />
    </resultMap>

    <sql id="SelectPrefix">
    <![CDATA[
    SELECT
        enac_pk, enac_enti_pk, enac_path, enac_orden
    ]]>
        <if test="idioma != null">
        <![CDATA[
            , (
                SELECT i18n_text FROM tbl_i18n_i18n
                WHERE i18n_pref = 'enac'
                    AND i18n_ext_pk = enac_pk
                    AND i18n_lang = #{idioma}
            ) AS enac_etiqueta
        ]]>
        </if>
    <![CDATA[
    FROM
        tbl_entidad_accion_enac enac
    ]]>
    </sql>

    <sql id="SelectWhere">
        <where>
            <if test="id != null">
                AND enac_pk = #{id}
            </if>
            <if test="entiId != null">
                AND enac_enti_pk = #{entiId}
            </if>
            <if test="path != null">
                AND enac_path = #{path}
            </if>
        </where>
    </sql>

    <select id="selectObject" parameterType="EntidadAccionCriterioVO" resultMap="ResultMap">
        <include refid="SelectPrefix" />
        <include refid="SelectWhere" />
    </select>

    <select id="selectList" parameterType="EntidadAccionCriterioVO" resultMap="ResultMap">
        <include refid="SelectPrefix" />
        <include refid="SelectWhere" />
        ORDER BY enac_orden
    </select>

    <select id="selectAll" resultMap="ResultMap">
        <include refid="SelectPrefix" />
        ORDER BY enac_enti_pk, enac.enac_orden
    </select>

    <select id="exists" parameterType="EntidadAccionVO" resultType="boolean">
        <![CDATA[
        SELECT COUNT(1)
        FROM tbl_entidad_accion_enac
        WHERE enac_enti_pk = #{entiId}
            AND enac_path = #{path}
        ]]>
    </select>

    <insert id="insert" parameterType="EntidadAccionVO">
        <![CDATA[
        INSERT INTO tbl_entidad_accion_enac (enac_pk, enac_enti_pk, enac_path, enac_orden)
        VALUES (#{id}, #{entiId}, #{path}, #{orden})
        ]]>
    </insert>

    <update id="update" parameterType="EntidadAccionVO">
        <![CDATA[
        UPDATE tbl_entidad_accion_enac SET
            enac_orden = #{orden}
        WHERE enac_pk = #{id}
        ]]>
    </update>

    <update id="delete" parameterType="EntidadAccionVO">
        <![CDATA[
        DELETE FROM tbl_entidad_accion_enac
        WHERE enac_pk = #{id}
        ]]>
    </update>
</mapper>
