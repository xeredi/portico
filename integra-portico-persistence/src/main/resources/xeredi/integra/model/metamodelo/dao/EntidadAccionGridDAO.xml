<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xeredi.integra.model.metamodelo.dao.EntidadAccionGridDAO">
    <resultMap type="EntidadAccionGridVO" id="ResultMap">
        <id column="enag_pk"/>

        <result column="enag_pk" property="id" />
        <result column="enag_enti_pk" property="entiId" />
        <result column="enag_path" property="path" />
        <result column="enag_etiqueta" property="etiqueta" />
        <result column="enag_orden" property="orden" />
    </resultMap>

    <sql id="SelectPrefix">
    <![CDATA[
    SELECT
        enag_pk, enag_enti_pk, enag_path, enag_orden
    ]]>
        <if test="idioma != null">
        <![CDATA[
            , (
                SELECT i18n_text FROM tbl_i18n_i18n
                WHERE i18n_pref = 'enag'
                    AND i18n_ext_pk = enag_pk
                    AND i18n_lang = #{idioma}
            ) AS enag_etiqueta
        ]]>
        </if>
    <![CDATA[
    FROM
        tbl_entidad_accgrid_enag
    ]]>
    </sql>

    <sql id="SelectWhere">
        <where>
            <if test="id != null">
                AND enag_pk = #{id}
            </if>
            <if test="entiId != null">
                AND enag_enti_pk = #{entiId}
            </if>
            <if test="path != null and !path.empty">
                AND enag_path LIKE #{path}
            </if>
        </where>
    </sql>

    <select id="selectObject" parameterType="EntidadAccionGridCriterioVO" resultMap="ResultMap">
        <include refid="SelectPrefix" />
        <include refid="SelectWhere" />
    </select>

    <select id="selectList" parameterType="EntidadAccionGridCriterioVO" resultMap="ResultMap">
        <include refid="SelectPrefix" />
        <include refid="SelectWhere" />
        ORDER BY enag_enti_pk, enag_orden
    </select>

    <select id="exists" parameterType="EntidadAccionGridVO" resultType="boolean">
        <![CDATA[
        SELECT COUNT(1)
        FROM tbl_entidad_accgrid_enag
        WHERE enag_enti_pk = #{entiId}
            AND enag_path = #{path}
        ]]>
    </select>

    <insert id="insert" parameterType="EntidadAccionGridVO">
        <![CDATA[
        INSERT INTO tbl_entidad_accgrid_enag (enag_pk, enag_enti_pk, enag_path, enag_orden)
        VALUES (#{id}, #{entiId}, #{path}, #{orden})
        ]]>
    </insert>

    <update id="update" parameterType="EntidadAccionGridVO">
        <![CDATA[
        UPDATE tbl_entidad_accgrid_enag SET
            enag_orden = #{orden}
        WHERE enag_pk = #{id}
        ]]>
    </update>

    <update id="delete" parameterType="EntidadAccionGridVO">
        <![CDATA[
        DELETE FROM tbl_entidad_accgrid_enag
        WHERE enag_pk = #{id}
        ]]>
    </update>
</mapper>
