<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xeredi.argo.model.seguridad.dao.GrupoAccionTramiteDAO">
    <resultMap type="GrupoAccionTramiteVO" id="ResultMap">
        <id column="grat_grpo_pk" />
        <id column="grat_actr_pk" />

        <result column="grat_grpo_pk" property="grpoId" />
        <result column="grat_actr_pk" property="actrId" />
    </resultMap>

    <sql id="SelectPrefix">
        SELECT grat_grpo_pk, grat_actr_pk
        FROM tbl_grupo_accion_tramite_grat
    </sql>

    <sql id="SelectWhere">
        <where>
            <if test="grpoId != null">
                AND grat_grpo_pk = #{grpoId}
            </if>
            <if test="actrId != null">
                AND grat_actr_pk = #{actrId}
            </if>
        </where>
    </sql>

    <select id="exists" parameterType="GrupoAccionTramiteVO" resultType="Boolean">
        <![CDATA[
        SELECT COUNT(1)
        FROM tbl_grupo_accion_tramite_grat
        WHERE
            grat_grpo_pk = #{grpoId}
            AND grat_actr_pk = #{actrId}
        ]]>
    </select>

    <select id="selectObject" parameterType="GrupoAccionTramiteCriterioVO" resultMap="ResultMap">
        <include refid="SelectPrefix" />
        <include refid="SelectWhere" />
    </select>

    <select id="selectList" parameterType="GrupoAccionTramiteCriterioVO" resultMap="ResultMap">
        <include refid="SelectPrefix" />
        <include refid="SelectWhere" />
    </select>

    <insert id="insert" parameterType="GrupoAccionTramiteVO">
        <![CDATA[
        INSERT INTO tbl_grupo_accion_tramite_grat (grat_grpo_pk, grat_actr_pk)
        VALUES (#{grpoId}, #{actrId})
        ]]>
    </insert>

    <delete id="delete" parameterType="GrupoAccionTramiteVO">
        <![CDATA[
        DELETE FROM tbl_grupo_accion_tramite_grat
        WHERE grat_grpo_pk = #{grpoId}
            AND grat_actr_pk = #{actrId}
        ]]>
    </delete>

    <delete id="deleteList" parameterType="GrupoAccionCriterioVO">
        DELETE FROM tbl_grupo_accion_tramite_grat
        <include refid="SelectWhere" />
    </delete>
</mapper>
