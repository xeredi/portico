<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <properties resource="Configuration_env.properties" />

    <settings>
        <setting name="logImpl" value="${db.logImpl}" />
        <setting name="proxyFactory" value="JAVASSIST"/>
    </settings>

    <typeAliases>
        <typeAlias type="xeredi.util.applicationobjects.LabelValueVO" alias="LabelValueVO" />

        <package name="xeredi.integra.model" />
    </typeAliases>

    <typeHandlers>
        <typeHandler handler="xeredi.util.mybatis.BooleanTypeHandler" javaType="java.lang.Boolean" jdbcType="INTEGER" />
    </typeHandlers>

    <environments default="local">
        <environment id="local">
            <transactionManager type="JDBC">
                <property name="DataSource" value="DBCP" />
                <property name="JDBC.Driver" value="${db.dataSource.driver}" />
                <property name="JDBC.ConnectionURL" value="${db.dataSource.url}" />
                <property name="JDBC.Username" value="${db.dataSource.username}" />
                <property name="JDBC.Password" value="${db.dataSource.password}" />
                <property name="JDBC.DefaultAutoCommit" value="false" />

                <property name="Pool.MaximumActiveConnections" value="10" />
                <property name="Pool.MaximumIdleConnections" value="5" />
                <property name="Pool.MaximumWait" value="60000" />

                <property name="Pool.ValidationQuery" value="select 1+1" />
                <property name="Pool.LogAbandoned" value="false" />
                <property name="Pool.RemoveAbandoned" value="false" />
                <property name="Pool.RemoveAbandonedTimeout" value="50000" />
            </transactionManager>

            <dataSource type="POOLED">
                <property name="url" value="${db.dataSource.url}" />
                <property name="driver" value="${db.dataSource.driver}" />
                <property name="username" value="${db.dataSource.username}" />
                <property name="password" value="${db.dataSource.password}" />
            </dataSource>
        </environment>
    </environments>

    <databaseIdProvider type="DB_VENDOR">
        <property name="SQL Server" value="sqlserver" />
        <property name="Oracle" value="oracle" />
        <property name="PostgreSQL" value="postgres" />
    </databaseIdProvider>

    <mappers>
        <package name="xeredi.integra.model" />
    </mappers>
</configuration>
